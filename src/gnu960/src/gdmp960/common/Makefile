#__dos__#LIBS	= $(LDIR)/libbfd.lib $(LDIR)/toolib.lib $(LDIR)/libdwarf.lib
#__win95__#LIBS	= $(LDIR)/libbfd.lib $(LDIR)/toolib.lib $(LDIR)/libdwarf.lib

all: $(TARG)

.c.$O:
	$(CC) $(NOLINK) $(CFLAGS) $<

$(ITARG): $(TARG)
	$(MV) $(TARG)$(EXE) $(ITARG)$(EXE)
#__dos__#	$(MV) $(TARG)$(EXP) $(ITARG)$(EXP)

$(TARG): hc.pro objlst.rf $(OBJS) $(LIBS)
#__dos__#	!if $(HOST) == dos
