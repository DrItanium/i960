# Essential under System V, harmless elsewhere
SHELL = /bin/sh

ITARG	= dmp960
TARG	= gdmp960
IDIR	= ../../include
LDIR	= $(G960BASE)/lib
CFLAGS	= $(OPT) -I$(IDIR) $(HOSTDEFS)

#-----------  DEFAULTS  ---------------------------
O	= o
RM	= rm -f
CP	= cp
MV	= mv
LN	= ln
STRIP	= strip
OPT	= -g
IOPT	= -O
OUT	= -o
NOLINK	= -c
DEST	= $(G960BASE)/bin

